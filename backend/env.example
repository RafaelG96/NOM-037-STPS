# Puerto del servidor
PORT=3000

# PostgreSQL connection string (formato: postgresql://usuario:password@host:puerto/base)
DATABASE_URL="postgresql://nom037_user:tu_password@localhost:5432/nom037"

# O usar variables individuales (si no usas DATABASE_URL):
# DB_USER=nom037_user
# DB_HOST=localhost
# DB_NAME=nom037
